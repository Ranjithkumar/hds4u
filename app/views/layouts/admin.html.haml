!!!
%html
  %head
    %title Help Desk
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/djime-cerulean/style", "web-app-theme/override" 
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"}= t('app_name')
          %span.login_user_name=# get_login_username
        
        = render :partial => "/layouts/user_navigation"
        = render :partial => "/layouts/main_navigation"
              
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Help Desk.
        -#sidebar
          = yield :sidebar
